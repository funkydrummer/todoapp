= form_for @song, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    .controls
      .btn-group{"data-toggle" => "buttons-radio"}
        .btn.btn-primary.kind TODO
        .btn.btn-primary.kind Joint
        .btn.btn-primary.kind Link
      = f.text_field :content, :class => 'text_field'
      = f.hidden_field :kind
      = f.submit nil, :class => 'btn btn-primary'
    =# link_to t('.cancel', :default => t("helpers.links.cancel")), songs_path, :class => 'btn'

