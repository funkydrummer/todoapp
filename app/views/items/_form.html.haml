= form_for @item, :html => { :class => 'form-horizontal form-navbar' } do |f|
  .control-group
    .controls
      .btn-group{"data-toggle" => "buttons-radio"}
        - Category.all.each do |category|
          .btn.btn-primary.kind{title: category.id}= category.name
      = f.text_field :content, :class => 'text_field input-navbar', :placeholder => "Enter text here...", :id => "input-in-nav"
      = f.hidden_field :category_id
      = f.submit "Save", :class => 'btn btn-warning'

